{
  "compileOnSave": true,
  "compilerOptions": {
    "outDir": "src",
    "module": "commonjs",
    "target": "es6",
    "sourceMap": true,
    "jsx": "react",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": false,
    "noImplicitUseStrict": true
  },
  "exclude": [
    "node_modules",
    "dist",
    "webpack.config.js",
    "node_modules",
    "typings/main",
    "typings/main.d.ts",
    "lib"
  ]
}
